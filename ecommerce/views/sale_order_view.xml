<odoo>
    <record id="view_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="曾訂購過的商品" name="customer_previous_products_page">
                    <field name="customer_previous_products">
                        <tree editable="bottom">
                            <field name="product_id" string="曾訂購過"/>
                            <field name="description" string="說明"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>