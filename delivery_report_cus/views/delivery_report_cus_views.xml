<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form_inherit_custom_report" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.custom.report</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- 在表單 header 中新增按鈕 -->
            <xpath expr="//header" position="inside">
                <button name="action_print_and_download_pdf"
                    type="object"
                    string="列印中一刀出貨單"
                    class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
