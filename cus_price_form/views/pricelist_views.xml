<odoo>
    <record id="product_pricelist_form_inherit_packaging_price" model="ir.ui.view">
        <field name="name">product.pricelist.form.inherit.packaging.price</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="packaging_unit_price"/>
            </xpath>

            <xpath expr="//field[@name='item_ids']/tree/field[@name='fixed_price']" position="after">
                <field name="packaging_unit"
                       string="包裝單位"
                       column_invisible="not parent.packaging_unit_price"/>
            </xpath>

        </field>
    </record>
</odoo>
