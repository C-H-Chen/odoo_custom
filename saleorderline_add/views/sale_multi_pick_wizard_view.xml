<odoo>
    <!-- Wizard form -->
    <record id="view_sale_multi_picking_wizard" model="ir.ui.view">
        <field name="name">sale.multi.picking.wizard.form</field>
        <field name="model">sale.multi.picking.wizard</field>
        <field name="arch" type="xml">
            <form string="銷售訂單建立合併出貨">
                <sheet>
                    <group>
                        <field name="sale_order_ids" widget="many2many_tags"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="picking_type_id"/>
                        <field name="select_all"/>
                    </group>
                    <notebook>
                        <page string="選擇商品">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="selected"/>
                                    <field name="sale_order_id"/>
                                    <field name="sale_line_id"/>
                                    <field name="product_id"/>
                                    <field name="qty_available" readonly="1"/>
                                    <field name="qty_to_ship"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="建立出貨單" type="object" name="action_create_combined_picking" class="oe_highlight"/>
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for wizard -->
    <record id="action_sale_multi_picking_wizard" model="ir.actions.act_window">
        <field name="name">合併出貨</field>
        <field name="res_model">sale.multi.picking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Server Action -->
    <record id="action_sale_multi_picking_server" model="ir.actions.server">
        <field name="name">銷售訂單轉出貨單</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">action = records.action_open_multi_picking_wizard()</field>
    </record>
</odoo>
