<odoo>
  <data>
    <record id="paperformat_outsource_zero_margin" model="report.paperformat">
        <field name="name">Outsource Zero Margin A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_outsource" model="ir.actions.report">
      <field name="name">外包加工單</field>
      <field name="model">purchase.order</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">out_process_order.report_outsource_document</field>
      <field name="report_file">out_process_order.report_outsource_document</field>
      <field name="paperformat_id" ref="out_process_order.paperformat_outsource_zero_margin"/>
      <field name="binding_model_id" ref="purchase.model_purchase_order"/>
      <field name="binding_type">report</field>
    </record>
  </data>
</odoo>
