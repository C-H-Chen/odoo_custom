<odoo>
    <record id="view_mrp_production_form_inherit_components" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.components.remaining</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <field name="remaining_qty" string="未投料"/>
            </xpath>
        </field>
    </record>
    <record id="view_mrp_production_form_inherit_purchase_button" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.purchase.button</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_open_purchase_orders"
                        type="object"
                        string="查看採購單"
                        class="oe_highlight"
                        icon="fa-shopping-cart"/>
            </header>
        </field>
    </record>
</odoo>
